<schemalist gettext-domain="gnome-shell-extensions-mediaplayer">
  <schema id="org.gnome.shell.extensions.mediaplayer" path="/org/gnome/shell/extensions/mediaplayer/">
    <key name="volumemenu" type="b">
        <default>true</default>
        <_summary>Whether to show the mediaplayer controls in the volume menu</_summary>
        <_description>Whether to show the mediaplayer controls in the volume menu (requires restart).</_description>
    </key>
    <key name="volume" type="b">
        <default>false</default>
        <_summary>Whether to show the volume control of the mediaplayers</_summary>
        <_description>Whether to show the volume control of the mediaplayers (requires mediaplayer restart).</_description>
    </key>
    <key name="position" type="b">
        <default>true</default>
        <_summary>Whether to show the position slider of the mediaplayers</_summary>
        <_description>Whether to show the position slider of the mediaplayers (requires mediaplayer restart).</_description>
    </key>
    <key name="playlists" type="b">
        <default>false</default>
        <_summary>Whether to show the playlists (if supported) of the mediaplayers</_summary>
        <_description>Whether to show the playlists of the mediaplayers (requires mediaplayer restart).</_description>
    </key>
    <key name="coversize" type="i">
        <default>80</default>
        <_summary>The size of the cover</_summary>
        <_description>The size of the cover displayed in the menu. Default is 80px width. (requires mediaplayer restart).</_description>
    </key>
  </schema>
</schemalist>
